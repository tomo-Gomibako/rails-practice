<div class="modal-dialog">
  <div class="modal-content">
    <%= form_with(model: medium, local: true, remote: true) do |form| %>
      <% if medium.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(medium.errors.count, "error") %> prohibited this medium from being saved:</h2>

          <ul>
          <% medium.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title %>
      </div>

      <div class="field">
        <%= form.label :discription %>
        <%= form.text_area :discription %>
      </div>

      <div class="field">
        <%= form.label :url %>
        <%= form.text_field :url %>
      </div>

      <div class="field">
        <%= form.label :url_large %>
        <%= form.text_field :url_large %>
      </div>

      <div class="field">
        <%= form.label :url_medium %>
        <%= form.text_field :url_medium %>
      </div>

      <div class="field">
        <%= form.label :url_small %>
        <%= form.text_field :url_small %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
